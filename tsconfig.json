{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "@/*": [
        "*"
      ],
      "@core": [
        "core"
      ],
      "@core/*": [
        "core/*"
      ],
      "@moderation": [
        "moderation"
      ],
      "@moderation/*": [
        "moderation/*"
      ],
      "@genai": [
        "genai"
      ],
      "@genai/*": [
        "genai/*"
      ],
      "@roleplay": [
        "roleplay"
      ],
      "@roleplay/*": [
        "roleplay/*"
      ]
    }
  },
  "include": ["src/**/*"],
}
